<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.madwak.kimondroid.MainActivity">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="KimOnDroid"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@color/white" />

        <TextView
            android:id="@+id/txtMiniTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Aplikasi Media Pembelajaran Kimia"
            android:layout_marginTop="85dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="italic"
            android:background="@color/white"/>

        <Button
            android:id="@+id/btnMateri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:hint="Materi"
            android:onClick="funMateri"/>

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMateri"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            android:hint="Quiz"
            android:onClick="funcQuiz"/>

        <Button
            android:id="@+id/btnPetunjuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnMateri"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/btnQuiz"
            android:background="@color/colorPrimaryDark"
            android:hint="Petunjuk"/>
</RelativeLayout>
